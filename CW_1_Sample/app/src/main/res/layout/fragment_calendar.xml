<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:backgroundTint="#673AB7"
    tools:context=".ui.dialog.CalendarFragment">

    <CalendarView
        android:id="@+id/fmCalendarCalendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F51B5"
        android:backgroundTint="#673AB7"
        android:dateTextAppearance="@style/TextAppearance.AppCompat.Body2"
        android:selectedWeekBackgroundColor="#2196F3"
        android:textDirection="firstStrong"
        android:unfocusedMonthDateColor="#FFFFFF"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Display3"
        android:weekNumberColor="#FFFFFF"
        android:weekSeparatorLineColor="#FFFFFF" />
</FrameLayout>